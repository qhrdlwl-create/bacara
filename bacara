<div class="card">
    <p>64가지 경우의 수 중 무작위</p>
    <div id="result">------</div>
    <button onclick="generateLine()">결과 생성하기</button>
</div>

<script>
    function generateLine() {
        const options = ['P', 'B'];
        let resultHtml = "";
        
        // 진동 효과 (모바일 지원 기기만)
        if (window.navigator.vibrate) {
            window.navigator.vibrate(50);
        }

        for (let i = 0; i < 6; i++) {
            const pick = options[Math.floor(Math.random() * 2)];
            const colorClass = pick === 'P' ? 'P' : 'B';
            resultHtml += `<span class="${colorClass}">${pick}</span>`;
        }
        
        document.getElementById('result').innerHTML = resultHtml;
    }
</script>
